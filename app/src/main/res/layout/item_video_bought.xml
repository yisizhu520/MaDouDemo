<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="@dimen/spacing_normal"
        >

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/avatar_default"
            />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_toRightOf="@+id/avatar_iv"
            android:text="Haa女巫"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/download_iv"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_download"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="@dimen/spacing_normal"
        android:background="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/video_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/video_image_default"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/video_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_toRightOf="@+id/video_iv"
            android:text="视频秀"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/video_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/video_name_tv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="15秒"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/video_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/video_name_tv"
            android:layout_centerVertical="true"
            android:text="韩版潮流春款碎花裙"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:textColor="@color/gray"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/video_time_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/video_name_tv"
            android:layout_below="@+id/video_desc_tv"
            android:text="交片时间"
            android:layout_marginTop="@dimen/spacing_small"
            android:textColor="@color/gray"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/video_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/video_desc_tv"
            android:text="2016年6月27日"
            android:layout_marginTop="@dimen/spacing_small"
            android:textColor="@color/gray"
            android:textSize="16sp"
            />

    </RelativeLayout>

</LinearLayout>